


<%= render 'user', user: @user, book: @book %>


      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>

        <table class="table table-hover table-inverse">

          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>


          <!--リクエストしたユーザーが投稿した本にソートしてデータを表示する-->

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <% if @user.profile_image.attached? %>
                    <%= link_to user_path(@user.id) do %>
                    <%= image_tag @user.profile_image, size:"80x80" %>
                    <% end %>
                  <% else %>
                    <%= link_to user_path(@user.id) do %>
                    <%= image_tag 'no_image', size:"80x80" %>
                    <% end %>
                  <% end %>
                </td>
                <td>

                  <%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>

              </tr>
            <% end %>
          </tbody>

        </table>
      </div>

  </div>
</div>
