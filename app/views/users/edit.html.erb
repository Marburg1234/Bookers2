


<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>User info</h2>

       <!--validatesのエラーメッセージを表示する箇所-->
      <% if @user.errors.any? %>
        <% if @user.errors.count == 2 %>
          <%= @user.errors.count %> errors prohibited this obj from being saved:
        <% else %>
          <%= @user.errors.count %> error prohibited this obj from being saved:
        <% end %>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>



    <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label><br />
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label><br />
          <%= f.file_field :profile_image %>
        </div>

        <div class="form-group">
          <label for="user_introduction">Introduction</label><br />
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>

        <div class="form-group">
          <!--<button class="btn btn-secondary">-->
          <%= f.submit "Update User", class: 'btn btn-secondary' %>
        </div>
    <% end %>
    </div>
  </div>
</div>





