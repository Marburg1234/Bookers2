
<%= render 'users/user', user: @user, book: @book %>




<!--Book detail 投稿詳細のページ (右側の表)-->

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>

  <table class="table">
    <tbody>
      <tr>
        <td>
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, size: '100x100' %>
          <% else %>
            <%= image_tag 'no_image', size:'100x100' %>
          <% end %>
          <br />
          <%= link_to @user.name, user_path(@user.id) %>
        </td>
        <td>
          <%= link_to @book.title, book_path(@book.id) %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <% if @book.user.id == current_user.id %>
          <td>
            <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success' %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book.id), class: 'btn btn-danger', method: :delete, "data-confirm" => "本当に消しますか?" %>
          </td>
        <% else %>
          <td colspan="3"></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
