<!--フラッシュメッセージの挿入-->
<%= flash[:notice] %>

<!--左側の部分 User info と New Book-->
<div class="container px-5 px-sm-0">
  <div class="row">


    <div class="col-md-3">
      <h2>User Info</h2>

        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size:"100x100" %>
        <% else %>
          <%= image_tag 'no_image', size:"100x100" %>
        <% end %>
    <br />

        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <%= link_to edit_user_path(current_user.id) do %>
          <div class="row">
            <button type="button" class="btn btn-outline-secondary btn-block edit_user_179532">
              <i class="fas fa-user-cog" ></i>
            </button>
          </div>
        <% end %>


        <h2 class="mt-3">New Book</h2>
          <div class="form-group">
            <label for="boot_title">Title</label>
            <%= form_with model: @book do |f| %>
            <%= f.text_field :title %>
          </div>

          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <br />
            <%= f.text_area :body %>
          </div>

            <div class="form-group">
              <%= f.submit "Create Book", class: 'btn btn-success' %>
            </div>
            <% end %>

      </div>


<!--Book detail 投稿詳細のページ (右側の表)-->

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>

  <table class="table">
    <tbody>
      <tr>
        <td>
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, size: '100x100' %>
          <% else %>
            <%= image_tag 'no_image', size:'100x100' %>
          <% end %>
          <br />
          <%= link_to @user.name, user_path(@user.id) %>
        </td>
        <td>
          <%= link_to @book.title, book_path(@book.id) %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <% if @book.user.id == current_user.id %>
         <td>
          <%= link_to "edit", edit_book_path(@book.id), class: 'btn btn-success' %>
        </td>
        <td>
          <%= link_to "destroy", book_path(@book.id), class: 'btn btn-danger', method: :delete, "data-confirm" => "本当に消しますか?" %>
        </td>
        <% else %>
        <td colspan="3"></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
